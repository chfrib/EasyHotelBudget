<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>



<div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><h1><%= @budget.hotel %></h1></div>

      <!-- Table -->
      <table class="table">
       	<thead>
        </thead>
        <tbody>
        	<tr>
        		<td>Year</td>
        		<td><p id="year"><%= @budget.year %></p></td>
        	</tr>
        	<tr>
          		<td>Type of budget</td>
            	<td>budget or realised</td>
        	</tr>
        </tbody>
        
        <thead>
          <th><h3>Rooms</h3></th>
        </thead>
        <tbody>
        	<tr>
            	<td>Room available</td>
            	<td><p id="rooms_available"><%= @budget.rooms_available %></p></td>
        	</tr>
        	<tr>
          		<td>Room Sold</td>
          		<td><p id="rooms_sold"><%= @budget.rooms_sold %></p></td>
        	</tr>
        	<tr>
          		<td>Average Room Rate</td>
          		<td><%= @budget.average_room_rate %></td>
        	</tr>
        	<tr>
          		<td>Occupancy Rate</td>
          		<td><p><%= @budget.occupancy_rate %></p></td>
        	</tr>
        </tbody>
        <thead>
          <th><h3>Sales</h3></th>
        </thead>
        <!-- <tbody> -->
        <tbody>
        	<tr>
            	<td>Room Sales</td>
            	<td><p id="room_sales"><%= @budget.room_sales %></p></td>
            	<td><p id="room_sales_proportion"><%= @budget.room_sales_proportion %></p></td>
        	</tr>
        	<tr>
          		<td>Food sales</td>
          		<td><p id="food_sales"><%= @budget.food_sales %></p></td>
          		<td><p id="food_sales_proportion"><%= @budget.food_sales_proportion %></p></td>
        	</tr>
        	<tr>
          		<td>Beverage Sales</td>
          		<td><p id="beverage_sales"><%= @budget.beverage_sales %></p></td>
          		<td><p id="beverage_sales_proportion"><%= @budget.beverage_sales_proportion %></p></td>
        	</tr>
        	<tr>
          		<td>Telephone Sales</td>
          		<td><p id="telephone_sales"><%= @budget.telephone_sales %></p></td>
          		<td><p id="telephone_sales_proportion"><%= @budget.telephone_sales_proportion %></p></td>
        	</tr>
        	<tr>
          		<td>Other Sales</td>
          		<td><p id="other_sales"><%= @budget.other_sales %></p></td>
          		<td><p id="other_sales_proportion"><%= @budget.other_sales_proportion %></p></td>
        	</tr>
        	<tr>
          		<td>Total Sales</td>
          		<td><%= @budget.total_sales %></td>
          		<td>100 %</td>
        	</tr>
        </tbody>
        <thead>
          <th><h3>Revenue per room occupied</h3></th>
        </thead>
        <!-- <tbody> -->
        <tbody>
        	<tr>
            	<td>Room Revenue Per Room Occupied</td>
            	<td><%= @budget.room_revenue_per_room_occupied %></td>
        	</tr>
        	<tr>
          		<td>Food Revenue Per Room Occupied</td>
          		<td><%= @budget.food_revenue_per_room_occupied %></td>
        	</tr>
        	<tr>
          		<td>Beverage Revenue Per Room Occupied</td>
          		<td><%= @budget.beverage_revenue_per_room_occupied %></td>
        	</tr>
        	<tr>
          		<td>Telephone Revenue Per Room Occupied</td>
          		<td><%= @budget.telephone_revenue_per_room_occupied %></td>
        	</tr>
        	<tr>
          		<td>Other Revenue Per Room Occupied</td>
          		<td><%= @budget.other_revenue_per_room_occupied %></td>
        	</tr>
        	<tr>
          		<td>Total Revenue Per Room Occupied</td>
          		<td><%= @budget.total_revenue_per_room_occupied %></td>
        	</tr>
        </tbody>
        <thead>
          <th><h3>Department Costs</h3></th>
        </thead>
        <!-- <tbody> -->
        <tbody>
        	<tr>
            	<td>Room Costs</td>
            	<td><p id="room_costs"><%= @budget.room_costs %></p></td>
        	</tr>
        	<tr>
          		<td>Food Costs</td>
          		<td><p id="food_costs"><%= @budget.food_costs %></p></td>
        	</tr>
        	<tr>
          		<td>Beverage Costs</td>
          		<td><p id="beverage_costs"><%= @budget.beverage_costs %></p></td>
        	</tr>
        	<tr>
          		<td>Telephone Costs</td>
          		<td><p id="telephone_costs"><%= @budget.telephone_costs %></p></td>
        	</tr>
        	<tr>
          		<td>Other Costs</td>
          		<td><p id="other_costs"><%= @budget.other_costs %></p></td>
        	</tr>
        	<tr>
          		<td>Total Department Costs</td>
          		<td><p id="total_department_costs"><%= @budget.total_department_costs %></td>
        	</tr>
        	<tr>
          		<td>Gross Operating Income</td>
          		<td><p id="gross_operating_income"><%= @budget.gross_operating_income %></td>
        	</tr>
        </tbody>
        <thead>
          <th><h3>General Expenses</h3></th>
        </thead>
        <!-- <tbody> -->
        <tbody>
        	<tr>
            	<td>Administration and General</td>
            	<td><p id="ge_admin_and_general"><%= @budget.ge_admin_and_general %></p></td>
        	</tr>
        	<tr>
          		<td>Sales and Marketing</td>
          		<td><p id="ge_sales_and_marketing"><%= @budget.ge_sales_and_marketing %></p></td>
        	</tr>
        	<tr>
          		<td>Utilities</td>
          		<td><p id="ge_utilities"><%= @budget.ge_utilities %></p></td>
        	</tr>
        	<tr>
          		<td>Repair and Maintenance</td>
          		<td><p id="ge_repair_and_maintenance"><%= @budget.ge_repair_and_maintenance %></p></td>
        	</tr>
        	<tr>
          		<td>Total General Expenses</td>
          		<td><p id="total_general_expenses"><%= @budget.total_general_expenses %></td>
        	</tr>
        	<tr>
          		<td>Total Costs</td>
          		<td><p id="total_costs"><%= @budget.total_costs %></td>
        	</tr>
        	<tr>
          		<td>Gross Operating Profit</td>
          		<td><p id="gross_operating_profit"><%= @budget.gross_operating_profit %></td>
        	</tr>
        </tbody>
      </table>
    </div>

